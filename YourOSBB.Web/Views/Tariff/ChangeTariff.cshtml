@using Microsoft.AspNetCore.Mvc.TagHelpers
@model YourOSBB.Web.Models.Entities.TariffViewModel

@{
    ViewBag.Title = "title";
    Layout = "_OsbbHeadLayout";
}

<form method="post" asp-action="UpdateTariffPost" asp-controller="Tariff">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Змінити витрату</h2>
            <hr/>
        </div>
        <input type="hidden" asp-for="TariffId" class="form-control" value="@ViewBag.TariffId"/>
        <input type="hidden" asp-for="OsbbId" class="form-control" value="@ViewBag.OsbbId"/>
        <div class="mb-3">
            <label asp-for="Name">Назва тарифу</label>
            <input asp-for="Name" class="form-control"/>
        </div>
        <div class="mb-3">
            <label asp-for="Description">Опис</label>
            <input asp-for="Description" class="form-control"/>
        </div>
        <div class="mb-3">
            <label asp-for="Cost">Ціна</label>
            <input asp-for="Cost" class="form-control" type="number" step="0.01"/>
        </div>
        <div class="mb-3">
            <select asp-for="UserId" asp-items="@ViewBag.UsersList"></select>
        </div>
        
        <button type="submit" class="btn btn-primary">Змінити</button>
        <a asp-controller="Tariff" asp-action="ShowTariffsToHead" class="btn btn-secondary">
            До витрат
        </a>
    </div>
</form>