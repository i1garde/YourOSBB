@model YourOSBB.Web.Models.Entities.AnnouncementViewModel

@{
    Layout = "_OsbbHeadLayout";
}

<form method="post" asp-action="CreateAnnouncement" asp-controller="OsbbHead">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Створити оголошення</h2>
            <hr/>
        </div>
        <div class="mb-3">
            <label asp-for="Name">Тема</label>
            <input asp-for="Name" class="form-control"/>
        </div>
        <div class="mb-3">
            <label asp-for="Text">Текст</label>
            <input asp-for="Text" class="form-control"/>
        </div>
        <button type="submit" class="btn btn-primary">Створити</button>
        <a asp-controller="OsbbHead" asp-action="OsbbHead" class="btn btn-secondary">
            На головну
        </a>
    </div>
</form>