<div>
    <h3>Мешканці ОСББ:</h3>
    <table class="table">
        <thead>
        <tr>
            <th>ПІБ</th>
            <th>Пошта</th>
            <th>Номер телефона</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var obj in ViewBag.OsbbUsers)
        {
            <tr>
                <td>@obj.Surname @obj.Name @obj.PatronymicName</td>
                <td>@obj.Email</td>
                @if (@obj.PhoneNumber == null)
                {
                    <td>-</td>
                }
                else
                {
                    <td>@obj.PhoneNumber</td>
                }
            </tr>
        }
        </tbody>
    </table>
</div>