@model YourOSBB.Web.Models.Entities.OsbbViewModel

@{
    Layout = "_OsbbHeadLayout";
}

<div>
    <h3>Інформація про ОСББ:</h3>
</div>
<div>
    <b>Назва ОСББ:</b> @Model.Name<br/>
    <b>Область:</b> @Model.Region<br/>
    <b>Населений пункт:</b> @Model.City<br/>
    <b>Вулиця:</b> @Model.Street<br/>
    <b>Номер будинку:</b> @Model.HouseNumber<br/>
</div>

<div>
    <a asp-controller="OsbbHead" asp-action="ChangeOsbbInfo" asp-route-id="@Model" class="btn btn-secondary btn-sm">Змінити інформацію</a>
</div>
