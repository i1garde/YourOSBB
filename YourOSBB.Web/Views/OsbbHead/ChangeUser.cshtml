@using Microsoft.AspNetCore.Mvc.TagHelpers
@model YourOSBB.Entities.ApplicationUser

@{
    ViewBag.Title = "title";
    Layout = "_OsbbHeadLayout";
}

<form method="post" asp-action="UpdateUserPost" asp-controller="OsbbHead">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Змінити дані акаунта:</h2>
            <hr/>
        </div>
        <input type="hidden" asp-for="Role" class="form-control" value="@ViewBag.Role"/>
        <input type="hidden" asp-for="OsbbId" class="form-control" value="@ViewBag.OsbbId"/>
        <div class="mb-3">
            <label asp-for="Surname">Прізвище</label>
            <input asp-for="Surname" class="form-control"/>
        </div>
        <div class="mb-3">
            <label asp-for="Name">Ім'я</label>
            <input asp-for="Name" class="form-control"/>
        </div>
        <div class="mb-3">
            <label asp-for="PatronymicName">По батькові</label>
            <input asp-for="PatronymicName" class="form-control"/>
        </div>
    @* В акаунті пост фактум додавати номер кв та поверх
        <div class="mb-3">
            <label asp-for="">Вулиця</label>
            <input asp-for="Street" class="form-control"/>
        </div>
        <div class="mb-3">
            <label asp-for="HouseNumber">Номер будинку</label>
            <input asp-for="HouseNumber" class="form-control"/>
        </div>
        *@
        <button type="submit" class="btn btn-primary">Змінити</button>
        <a asp-controller="OsbbHead" asp-action="OsbbHead" class="btn btn-secondary">
            До сторінки акаунта
        </a>
    </div>
</form>